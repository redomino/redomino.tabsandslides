<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">


<head>


<metal:block metal:fill-slot="javascript_head_slot">
 
<!-- javascript coding --> 
<script> 
(function ($){
    $(document).ready(function (){
        var $image = $('.galleryImage').children().first();
        var w = $image.width();
        var h = $image.height();
        $image.hover(function (){
            //in
        },function (){
            //out
        });
    });

}(jQuery));


jQuery(document).ready(function(){

    jQuery('.galleryImage').hover(
        
        function(){
        jQuery(this).find('img').stop(true, false).animate(
                  { width:50,
                    height:38,
                    marginTop:10,
                    marginLeft:10
                  }, 500);
         },
         function(){
          jQuery(this).find('img').stop(true, false).animate(
                   {width:245,
                    height:186,
                    marginTop:0,
                    marginLeft:0
                  },300);
         });
});
</script> 



</metal:block>



</head>


<body>

<metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">

            <div class="visualClear"><!-- --></div>

            <div class="galleryContainer">
                <tal:block tal:repeat="box view/getViews">
                    <div tal:attributes="class string:galleryImage"
                        tal:define="index repeat/box/index">
                        <img tal:replace="structure box/tab" />
                        <div class="info">
                            <p tal:replace="structure box/pane|nothing" />
                        </div>
                    </div>
                </tal:block>
            </div>

    

    </metal:block>
</metal:content-core>

</body>
</html>

